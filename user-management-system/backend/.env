# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Local MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/user_management

# MongoDB Atlas (Uncomment and use for production)
# MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/user_management?retryWrites=true&w=majority

